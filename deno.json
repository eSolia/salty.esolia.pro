{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch server.ts",
    "start": "deno run --allow-net --allow-read --allow-env server.ts",
    "release": "deno run --allow-read --allow-write --allow-run release.ts",
    "release:patch": "deno run --allow-read --allow-write --allow-run release.ts patch",
    "release:minor": "deno run --allow-read --allow-write --allow-run release.ts minor",
    "release:major": "deno run --allow-read --allow-write --allow-run release.ts major",
    "version": "deno run --allow-read version-check.ts"
  },
  "imports": {
    "@std/semver": "https://deno.land/std@0.208.0/semver/mod.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}